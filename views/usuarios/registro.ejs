<%- include('../head'); %>
<body class="blue bg_auth">
    <div class="container">
        <div class="row">
            <br> <br>
            <form class="white z-depth-1 col s12 m6 offset-m7 border-radius" action="/auth/signup" method="POST">
              <h4 class="center-align text-blue">Registro De Usuario</h4>
              <div class="row p-3">
                <div class="input-field col s12 m6">
                  <input  id="nombre" type="text" class="validate" name="nombre">
                  <label for="first_name">Nombres</label>
                </div>
                <div class="input-field col s12 m6 ">
                  <input id="last_name" type="text" class="validate" name="apellido">
                  <label for="last_name">Apellidos</label>
                </div>
                <div class="input-field col s12">
                    <input id="email" type="email" class="validate" name="correo">
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Error" data-success="Correcto"><b>*Correo Institucional usuario@unitec.edu</b></span>
                </div>
                <div class="input-field col s12 m6">
                  <input type="text" class="validate" name="cuenta">
                  <label for="cuenta">Número De Cuenta</label>
                  <span class="helper-text" data-error="Error" data-success="Correcto"><b>Ejemplo: 31751043</b></span>
                </div>
                <div class="input-field col s12 m6">
                  <input type="text" class="validate" name="carrera" value="LICENCIATURA EN DISEÑO GRAFICO">
                  <label for="carrera">Carrera que estudia</label>
                </div>
                
                <div class="input-field col s12">
                  <input id="password" type="password" class="validate" name="contrasena">
                  <label for="password">Contraseña</label>
                </div>
              
              <div class="row text center p-3">
                <div class="col s12">
                    <button type="submit" class="waves-effect waves-light btn center-align blue darken-3">
                    <i class="material-icons right ">account_circle</i>Signup</button> <br>
                    Ya tienes cuenta? <a href="/auth/login">Inicia Sesion</a>
                </div>
              </div>
              </div>
            </form>
          </div>
    </div>
</body>
<%- include('../scripts'); %>